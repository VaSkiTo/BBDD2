<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Tarea" table="TAREA">
		<meta attribute="class-description">
			Esta clase contiene los detalles de las tareas y sus hijos
		</meta>
		<id name="idTarea" type="int" column="id_Tarea">
			<generator class="native"></generator>
		</id>
		<property name="fecha" column="fecha" type="date"/>
		<property name="descripcion" column="descripcion" type="string"/>
		<property name="completa" column="completa" type="boolean"/>
		
		<discriminator column="DISCRIMINATOR" type="string"></discriminator>
		
		<subclass name="Traduccion" extends="Tarea" discriminator-value="TC">
			<property name="texto" column="texto" type="string"></property>
			<one-to-one name="parrafo" class="Parrafo" cascade="all"></one-to-one>
			<one-to-one name="idioma" class="Idioma" cascade="all"></one-to-one>
		</subclass>
		
		<subclass name="Evaluacion" extends="Tarea" discriminator-value="EV">
			<property name="puntaje" column="puntaje" type="int"></property>
			<one-to-one name="traduccion" class="Traduccion" cascade="all"><</one-to-one>
		</subclass>
	</class>
</hibernate-mapping>