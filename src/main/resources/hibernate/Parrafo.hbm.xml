<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Parrafo" table="PARRAFO">
		<meta attribute="class-description">
			Esta clase contiene los detalles de los parrafos.
		</meta>
		<id name="idParrafo" type="int" column="id_Parrafo">
			<generator class="native"></generator>
		</id>
		<property name="texto" column="texto" type="string"></property>
		<many-to-one name="documento" class="Documento" cascade="all" column="idDocumento"></one-to-one>
	</class>
</hibernate-mapping>