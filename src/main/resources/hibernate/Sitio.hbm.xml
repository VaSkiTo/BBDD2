<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Sitio" table="SITIO">
		<meta attribute="class-description">
			Esta clase contiene los detalles del sitio.
		</meta>
		<id name="idSitio" type="int" column="id_Sitio">
			<generator class="native"></generator>
		</id>
		<list name="usuarios" cascade="all">
			<key column="idUsuarios"></key>
			<index column="idUsuarios"></index>
			<one-to-many class="Usuario"/>
		</list>
		<list name="cursos" cascade="all">
			<key column="idCursos"></key>
			<index column="idCursos">
			</index>
			<one-to-many clas="Curso"></one-to-many>
		</list>
		<list name="documentos" cascade="all">
			<key column="idDocumentos"/>
			<index column="idDocumentos"/>
			<one-to-many class="Documento"/>
		</list>
	</class>
</hibernate-mapping>